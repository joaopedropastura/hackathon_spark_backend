generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
    id        Int         @id @default(autoincrement())
    city      String
    unity     String      @unique()
    state     String
    street    String
    country   String
    isActive Boolean @default(true)
    inventory Inventory[]
}

model Material {
    id        Int         @id @default(autoincrement())
    name      String
    isActive Boolean @default(true)
    inventory Inventory[]
}

model Inventory {
    id         Int   @id @default(autoincrement())
    quantity   Int
    isActive Boolean @default(true)
    locationId Int
    materialId Int

    location Location @relation(fields: [locationId], references: [id])
    material Material @relation(fields: [materialId], references: [id])
}
